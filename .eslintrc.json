{
    "env": {
        "browser": true,
        "node": true,
        "webextensions": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "no-unsanitized",
        "@typescript-eslint"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "LOG_LEVEL": "readonly"
    },
    "rules": {
        "indent": [
            "warn",
            4,
            { "SwitchCase": 1 }
        ],
        "no-userless-escape": [
            "off"
        ],
        "no-warning-comments": [
            "warn"
        ],
        "no-console": [
            "warn"
        ],
        "no-debugger": [
            "error"
        ],
        "no-alert": [
            "error"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "prefer-const": ["error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "eqeqeq": [
            "error",
            "smart"
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "no-unsanitized/method": "error",
        "no-unsanitized/property": "error"
    }
}
